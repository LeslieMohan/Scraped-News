<div class="row"> 
  <h3 class="card">{{article.title}}</h3>
  <h5 class="card-panel articleBody">{{article.summary}}</h5>
  
</div>


<div class="row">
  <div class="col s2"></div>
   <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
    <h5>Leave a Comment about this Article:</h5>
      <div class="row">
        <div class="input-field">
        
          <input id="Name" type="text" placeholder="Name" name="name" class="validate active">
        </div>
        <div class="input-field">
          
          <input id="Comment" type="text" placeholder="Comment" name="comment" class="validate active">
        </div>
      </div>
       <!-- Submit Button -->
      <div class="row">
        <div class="input-field">
        <center><input class="btn curl-top-left" type="submit" value="Submit"></center>
        </div>
      </div>
    </form>
</div>

{{!-- comments go here --}}
<div class="row">
  <div class="col s2"></div>
    <div class="col s8">
      <h5>Comments:</h5>
        {{#if article.comment}}
          {{#each article.comment}}
            <div class="card">
              <p id="nameComment">{{name}}</p>
              <p>{{body}}<p>
            </div>
          {{/each}}
          {{else}}
          <p>No Comments Yet.</p>
        {{/if}}
    </div>
</div>
